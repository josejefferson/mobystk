{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": false,
		"noImplicitAny": true,
		"outDir": "dist/js",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2017"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
